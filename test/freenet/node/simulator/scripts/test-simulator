#!/bin/bash
SIZE=100
HTL=5
DEGREE=10
ITERATIONS=10
BWLIMIT=1024000
BWLIMIT_CBR=10000
cd ~/nobackup/testing
BASE=/usr/src/cvs/eclipse-workspace/fred/
CLASSPATH="$BASE/build/main/:$BASE/build/test/:$BASE/lib/freenet/freenet-ext.jar:$BASE/lib/bcprov-jdk15on-154.jar"
MODES="NONE FAST_QUEUE_BYPASS CBR_QUEUE_BYPASS PACKET_BYPASS"
SUFFIX="size=$SIZE.htl=$HTL.degree=$DEGREE"
for BYPASS in $MODES
do
	rm test.log.$BYPASS.$SUFFIX test.err.log.$BYPASS.$SUFFIX test.times.$BYPASS.$SUFFIX
	for x in `seq $ITERATIONS`
	do
		SEED=$((3131+10*$x))
		ARGS="size=$SIZE bypass=$BYPASS htl=$HTL degree=$DEGREE seed=$SEED bandwidth=$BWLIMIT bandwidth-cbr=$BWLIMIT_CBR"
		echo Running test $BYPASS.$SUFFIX with seed $SEED
		(time (java -Xmx10G -cp $CLASSPATH freenet.node.simulator.RealNodeRequestInsertTester $ARGS >> test.log.$BYPASS.$SUFFIX 2>> test.err.log.$BYPASS.$SUFFIX)) 2>> test.times.$BYPASS.$SUFFIX
		if ! grep "Succeeded, 20 successful fetches" test.err.log.$BYPASS.$SUFFIX; then echo "Iteration $x for $BYPASS.$SUFFIX failed"; exit 1; fi
		cat test.err.log.$BYPASS.$SUFFIX | grep "^TEST " > test.trace.$BYPASS.$SUFFIX
	done
done
for BYPASS in $MODES
do
	if test $BYPASS == "NONE"; then continue; fi
	echo Comparison between NONE and $BYPASS:
	diff -u test.trace.NONE.$SUFFIX test.trace.$BYPASS.$SUFFIX
done
for BYPASS in $MODES
do
	cat test.times.$BYPASS.$SUFFIX | tr --squeeze "\n" | (read x; cat) | tr "\t" "," | cut -d "," -f 2 | sed "s/\([0-9]*\)m\([0-9]\)\./\1m0\2\./" | tr -d "s" | tr "m" ":" | (echo "$BYPASS,$SUFFIX,"; echo real,user,sys; while read x; do read y; read z; echo "$x,$y,$z"; done) | sed "s/^\([0-9]\):/0\\1:/" | sed "s/,\([0-9]\):/,0\\1:/g" > times.$BYPASS.$SUFFIX.csv
done
paste -d "," times.*.$SUFFIX.csv > times.combined.csv
echo All done.
